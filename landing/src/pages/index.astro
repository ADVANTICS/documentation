---
import Layout from "@/layouts/layout.astro";
import Diagonal from "@/components/deco/Diagonal.astro";
import Typography from "@/components/core/Typography.astro";
---

<Layout title="ADVANTICS - Home">
  <h1
    class="font-poppins mx-auto mt-20 mb-10 w-fit text-4xl text-gray-200 xl:my-20 xl:mb-0 xl:text-6xl"
  >
    Get Started Here
  </h1>
  <section
    class="mx-2 mt-6 flex max-w-7xl flex-col gap-y-8 xl:mx-auto xl:mt-20 xl:w-full xl:flex-row xl:gap-y-0"
  >
    <div
      class="xl:side-l relative mt-10 flex-1 text-left grayscale hover:grayscale-0"
    >
      <a href="/cc" class="xl:absolute xl:inset-0">
        <h2 class="font-goodtimes text-accent text-3xl">
          <span>CHARGE </span>
          <span>CONTROLLERS</span>
        </h2>
        <p class="font-poppins mt-4 text-lg text-slate-300">
          Precision energy management for all systems
        </p>
      </a>
    </div>
    <div class="hidden w-0 xl:ml-[-300px] xl:block">
      <Diagonal />
    </div>
    <div
      class="xl:side-r relative flex-1 text-right grayscale hover:grayscale-0 xl:mt-10"
    >
      <a href="/pm" class="xl:absolute xl:inset-0">
        <h2 class="font-goodtimes text-accent text-3xl">
          <span>POWER</span>
          <span>MODULES</span>
        </h2>
        <p class="font-poppins mt-4 text-lg text-slate-300">
          High-efficiency conversion and control
        </p>
      </a>
    </div>
  </section>

  <section class="max-w-9xl mx-2 mt-6 xl:mx-auto xl:mt-20">
    <Typography
      as="p"
      variant="body-xl"
      class="font-poppins mx-auto max-w-[60ch] text-gray-300"
    >
      For further assistance to reach our engineering team, please create a
      support ticket on <a
        href="https://advantics.atlassian.net/servicedesk/customer/portal/1/user/login?destination=portal%2F1"
        class="text-accent underline hover:no-underline">ADVANTICS Helpdesk</a
      >. We appreciate your trust in ADVANTICS and look forward to supporting
      your success.
    </Typography>
  </section>
</Layout>
